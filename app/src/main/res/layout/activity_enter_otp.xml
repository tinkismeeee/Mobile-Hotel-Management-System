<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enterOTP">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

<!--        <io.alterac.blurkit.BlurLayout-->
<!--            android:id="@+id/blurLayout"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:visibility="invisible"-->
<!--            app:blk_blurRadius="12"-->
<!--            app:blk_downscaleFactor="0.7"-->
<!--            app:blk_fps="0"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/continueBtn"
            app:layout_constraintStart_toStartOf="@+id/continueBtn"
            app:layout_constraintTop_toBottomOf="@+id/continueBtn">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:letterSpacing="0.04"
                android:text="Didn't recieve code?"
                android:textAlignment="textEnd"
                android:textColor="#9D9D9D"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/signupBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:letterSpacing="0.04"
                android:paddingStart="7dp"
                android:text="Resend Code"
                android:textAlignment="viewStart"
                android:textColor="#2853AF"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/continueBtn"
            android:layout_width="349dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#2853AF"
            android:focusable="auto"
            android:text="Continue"
            app:cornerRadius="12sp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout6"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="@+id/linearLayout6"
            app:layout_constraintTop_toBottomOf="@+id/invalid_otp_notification" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0.05"
                android:text="Enter OTP"
                android:textAlignment="center"
                android:textSize="25sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="35dp"
            android:layout_height="29dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:alpha="0.5"
            android:scaleType="centerInside"
            android:scrollbarSize="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:paddingBottom="5dp"
                android:text="We have just sent you 4 digit code via your email"
                android:textAlignment="center"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/email_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="email_holder"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
            app:layout_constraintStart_toStartOf="@+id/linearLayout5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <EditText
                android:id="@+id/first_number"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background_otp"
                android:ems="10"
                android:fontFamily="@font/inter_bold"
                android:hint="1"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusLeft="@id/second_number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/second_number"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background_otp"
                android:ems="10"
                android:fontFamily="@font/inter_bold"
                android:hint="2"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusLeft="@id/third_number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/third_number"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background_otp"
                android:ems="10"
                android:fontFamily="@font/inter_bold"
                android:hint="3"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusLeft="@id/fourth_number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/fourth_number"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_background_otp"
                android:ems="10"
                android:fontFamily="@font/inter_bold"
                android:hint="4"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusLeft="@id/continueBtn"
                android:textAlignment="center" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/terms_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_terms_background"
                android:fontFamily="@font/inter_tight_semibold"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="10sp"
                android:paddingStart="2sp"
                android:paddingTop="20dp"
                android:paddingEnd="2sp"
                android:paddingBottom="20dp"
                android:text="I agree to the Terms of Service and Conditions of use including consent to electronic communications and I affirm that the information provided is my own."
                android:textAlignment="center"
                android:textColor="#2C2828"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <Button
                    android:id="@+id/disagreeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FCF5FD"
                    android:fontFamily="@font/inter_tight_extrabold"
                    android:letterSpacing="0.1"
                    android:text="Disagree"
                    android:textColor="#FF0000"
                    app:cornerRadius="0sp" />

                <Button
                    android:id="@+id/agreeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginEnd="7sp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/button_color"
                    android:fontFamily="@font/inter_tight_extrabold"
                    android:letterSpacing="0.1"
                    android:text="Agree"
                    app:cornerRadius="15dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <io.alterac.blurkit.BlurLayout
            android:id="@+id/blurLayout"
            android:layout_width="500dp"
            android:layout_height="900dp"
            android:layout_marginTop="100dp"
            android:visibility="gone"
            app:blk_blurRadius="12"
            app:blk_downscaleFactor="0.7"
            app:blk_fps="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/invalid_otp_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/exclamation_mark"
            android:drawablePadding="8dp"
            android:fontFamily="@font/inter"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Invalid OTP code entered"
            android:textAlignment="textStart"
            android:textColor="#FF0000"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/linearLayout6"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>