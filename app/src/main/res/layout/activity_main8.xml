<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Back"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Card"
        android:layout_marginTop="40dp"
        android:textColor="#0F1724"
        android:textSize="18sp"
        android:textStyle="bold"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_visa"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#4E3EAE"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/visa_default_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use as default payment method"
        android:checked="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_visa"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_mastercard"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/visa_default_checkbox"></androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@+id/mastercard_default_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use as default payment method"
        android:checked="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_mastercard"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ic_add"
        android:layout_width="63dp"
        android:layout_height="71dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="-300dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Add icon"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_mastercard" />

</androidx.constraintlayout.widget.ConstraintLayout>