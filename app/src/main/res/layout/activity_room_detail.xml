<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutBottomBar"
        android:layout_marginTop="8dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/ivDetailImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotel_img" />

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/circle_background"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/black" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/roomNumber"
                    android:layout_width="237dp"
                    android:layout_height="wrap_content"
                    android:text="Tên Phòng"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRoomType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#EEEEEE" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Floor"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFloor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="số tầng" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Bed count"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBedCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="sl giường" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Max guests"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMaxGuests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="sl khách tối đa" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Mô tả"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="4dp"
                    android:text="Mô tả phòng..."
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Optional services"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <GridLayout
                    android:id="@+id/service_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:useDefaultMargins="true"
                    android:padding="4dp">

                    <!-- Row 1 -->
                    <Button
                        android:id="@+id/laundry_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Laundry and ironing"
                        android:backgroundTint="@color/gray"
                        android:textColor="@color/black"
                        app:cornerRadius="12dp" />

                    <Button
                        android:id="@+id/breakfast_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Buffet and breakfast"
                        android:backgroundTint="@color/gray"
                        android:textColor="@color/black"
                        app:cornerRadius="12dp" />

                    <!-- Row 2 -->
                    <Button
                        android:id="@+id/pickup_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Pickup from airport"
                        android:backgroundTint="@color/gray"
                        android:textColor="@color/black"
                        app:cornerRadius="12dp" />

                    <Button
                        android:id="@+id/massage_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Massage and spa"
                        android:backgroundTint="@color/gray"
                        android:textColor="@color/black"
                        app:cornerRadius="12dp" />

                    <!-- Row 3 -->
                    <Button
                        android:id="@+id/dinner_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Dinner buffet"
                        android:backgroundTint="@color/gray"
                        android:textColor="@color/black"
                        app:cornerRadius="12dp" />

                    <Button
                        android:id="@+id/minibar_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="In-room mini bar"
                        android:backgroundTint="@color/gray"
                        android:textColor="@color/black"
                        app:cornerRadius="12dp" />

                    <!-- Row 4 -->
                    <Button
                        android:id="@+id/additionalbed_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Additional Bed (+1)"
                        android:backgroundTint="@color/gray"
                        android:textColor="@color/black"
                        app:cornerRadius="12dp" />

                    <Button
                        android:id="@+id/localguide_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Daily city tour guide"
                        android:backgroundTint="@color/gray"
                        android:textColor="@color/black"
                        app:cornerRadius="12dp" />

                </GridLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/layoutDateSelect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày nhận - Trả"
                android:textSize="12sp"
                android:textColor="#888"/>
            <TextView
                android:id="@+id/tvDateRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngày"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnBookNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt Ngay"
            android:backgroundTint="#2196F3"/>
    </LinearLayout>

</RelativeLayout>