<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".VideoCallActivity">

    <!-- 1. Video người gọi (Nền) -->
    <ImageView
        android:id="@+id/iv_caller_video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hotel_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
    <!-- Thay @drawable/hotel_placeholder bằng ảnh người gọi -->

    <!-- 2. Video người dùng (Góc) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_user_video"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_user_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/map_placeholder"
            tools:srcCompat="@tools:sample/avatars" />
        <!-- Thay @drawable/map_placeholder bằng ảnh người dùng -->

    </com.google.android.material.card.MaterialCardView>

    <!-- 3. Thông tin người gọi (ở trên cùng, trong ảnh gốc là ở dưới) -->
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- 4. Thông tin người ở video nhỏ (Trong ảnh gốc) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_video_info"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/card_user_video"
        app:layout_constraintEnd_toEndOf="@id/card_user_video"
        app:layout_constraintStart_toStartOf="@id/card_user_video">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Victor Ker..."
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_call_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="10:12"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </LinearLayout>


    <!-- 5. Thanh điều khiển (Dưới cùng) -->
    <LinearLayout
        android:id="@+id/ll_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Nút Tắt/Bật Micro -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_toggle_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@android:drawable/ic_btn_speak_now"
            app:backgroundTint="@color/design_default_color_on_secondary"
            app:fabSize="normal"
            app:tint="@android:color/white" />

        <!-- Nút Kết thúc cuộc gọi -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_end_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@drawable/ic_phone"
            app:backgroundTint="@android:color/holo_red_dark"
            app:fabSize="normal"
            app:tint="@android:color/white" />

        <!-- Nút Tắt/Bật Camera -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_toggle_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:src="@android:drawable/ic_menu_camera"
            app:backgroundTint="@color/design_default_color_on_secondary"
            app:fabSize="normal"
            app:tint="@android:color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>