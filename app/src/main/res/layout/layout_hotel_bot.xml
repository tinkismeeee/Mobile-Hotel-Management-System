<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardChatPanel"
    android:layout_width="320dp"
    android:layout_height="480dp"
    android:layout_gravity="top|center_horizontal"
    android:layout_marginTop="80dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="20dp"
    app:cardBackgroundColor="#FFFFFF"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1976D2"
            android:paddingHorizontal="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="ðŸ¤– Chatbot AI"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/btnCloseChat"
                android:layout_width="40dp"
                android:scaleType="centerInside"
                android:layout_height="40dp"
                android:src="@drawable/xmark_solid_full"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollChat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F8F9FA"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvChatContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="Hello, how I can help you?"
                android:textColor="#333333"
                android:textSize="16sp" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/etChatInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter message..."
                android:padding="10dp"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/btnChatSend"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/paper_plane_regular_full"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
